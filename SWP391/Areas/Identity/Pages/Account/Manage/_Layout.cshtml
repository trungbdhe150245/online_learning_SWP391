                                @*EDIT PROFILE: XEM VÀ EDIT THÔNG TIN NGƯỜI DÙNG:USERNAME, PHONE, ADDRESS, GENDER, DOB, PROFILE_URL*@
                                <div class="tab-pane active" id="edit-profile">
                                    <div class="profile-head">
                                        <h3>Edit Profile</h3>
                                    </div>
                                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                                    <form class="edit-profile" id="profile-form" method="post" enctype="multipart/form-data">
                                        <div class="">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-md-3 col-lg-2 col-form-label" asp-for="Username"></label>
                                                <div class="col-12 col-sm-9 col-md-9 col-lg-7">
                                                    <input asp-for="Username" class="form-control" type="text" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-md-3 col-lg-2 col-form-label" asp-for="Input.PhoneNumber"></label>
                                                <div class="col-12 col-sm-9 col-md-9 col-lg-7">
                                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-12 col-sm-3 col-md-3 col-lg-2 col-form-label" asp-for="Input.FullName"></label>
                                                <div class="col-12 col-sm-9 col-md-9 col-lg-7">
