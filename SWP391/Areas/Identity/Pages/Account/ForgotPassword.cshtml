@page "/ForgotPassword/"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "FORGOT PASSWORD";
    Layout = "~/Views/Shared/CustomLayout/_LayoutBigPic.cshtml";
}
<div class="page-wraper">
    <div id="loading-icon-bx"></div>
    <div class="account-form">
        <div class="account-head" style="background-image:url(assets/images/background/bg2.jpg);">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/images/logo/logo.png" alt=""></a>
        </div>
        <div class="account-form-inner">
            <div class="account-container">
                <div class="heading-bx left">
                    <h2 class="title-head">Reset Password <span>Now</span></h2>
                </div>
                <form class="contact-bx"method="post">
                    <div class="row placeani">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <p>Enter correct email address</p>
                                @*<label asp-for="Input.Email"></label>*@
                                <input asp-for="Input.Email" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-12 m-b30">
                            <button name="submit" type="submit" value="Submit" class="btn button-md">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

