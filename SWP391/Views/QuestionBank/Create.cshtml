@model SWP391.Models.QuestionBank

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/UserLayout/_AdminLayout2.cshtml";

}

<h2>Create Question</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Content" class="form-label text-danger">Question Content</label>
                <textarea asp-for="Content" class="form-control" rows="5" cols="50"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group col mb-3">
                <label asp-for="OptionA" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="OptionA" class="form-control">
                    <span asp-validation-for="OptionA" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col mb-3">
                <label asp-for="OptionB" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="OptionB" class="form-control">
                    <span asp-validation-for="OptionB" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col mb-3">
                <label asp-for="OptionC" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="OptionC" class="form-control">
                    <span asp-validation-for="OptionC" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col mb-3">
                <label asp-for="OptionD" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="OptionD" class="form-control">
                    <span asp-validation-for="OptionD" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="Answer" class="form-label text-green"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>

            <div class="form-group col mb-3">
                <label asp-for="Weight" class="col-sm-2 col-form-label">Weight</label>
                <div class="col-sm-10">
                        <input type="number" asp-for="Weight" class="form-control">
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="CourseId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Course_Id"></select>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="QuizLevelId" class="control-label"></label>
                <select asp-for="QuizLevelId" class="form-control" asp-items="ViewBag.Level_Id"></select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Status_Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

