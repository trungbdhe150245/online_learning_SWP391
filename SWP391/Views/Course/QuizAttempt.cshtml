@model List<SWP391.Models.Quiz>
@{
    Layout = "_Layout";
    ViewData["Title"] = "ATTEMPT";
}
<div class="page-content bg-white">
    <!-- inner page banner -->
    <div class="page-banner ovbl-dark" style="background-image:url(assets/images/banner/banner1.jpg);">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">@ViewData["TopicName"]</h1>
            </div>
        </div>
    </div>
    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="#">Home</a></li>
                <li>Attempt</li>
            </ul>
        </div>
    </div>
    <div class="content-block">
        <!-- About Us -->
        <div class="section-area section-sp1">
            <h2 style="text-align:center">Quiz List</h2>
            @{var table_index = 1;} 
            <div class="container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">QuizName</th>
                            <th scope="col">Description</th>
                            <th scope="col">Number of questions</th>
                            <th scope="col">Duration</th>
                            <th scope="col">Difficult</th>
                            <th scope="col">Last attempt score</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            
                            foreach (var quiz in Model)
                            {
                                
                        <tr>
                            <td scope="row">@(table_index++)</td>
                            <td>@(quiz.Name)</td>
                            <td>@(quiz.Description)</td>
                            <td>@(quiz.QuestionNum)</td>
                            <td>@(quiz.Duration)</td>
                            <td>@(quiz.QuizLevel.QuizLevelName)</td>
                            @if (quiz.Attempts.Count > 0)
                            {
                                <td>@(quiz.Attempts.ElementAt(quiz.Attempts.Count - 1).TotalMark)</td>
                                <td>
                                    <a href="#" class="btn btn-primary">Attempt</a>
                                    <a href="#" class="btn btn-primary">View results</a>
                                </td>
                            }
                            else
                            {
                                <td>-</td>
                                <td>
                                    <a href="#" class="btn btn-primary">Attempt</a>
                                </td>
                            }



                        </tr>
                            }

                        }
                    </tbody>

