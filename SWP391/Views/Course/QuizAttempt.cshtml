@model List<SWP391.Models.Quiz>
@{
    Layout = "_Layout";
    ViewData["Title"] = "ATTEMPT";
}
<div class="page-content bg-white">
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="#">Home</a></li>
                <li>Attempt</li>
            </ul>
        </div>
    </div>
    <div class="content-block">
        <div class="section-area section-sp1">
            <h2 style="text-align:center">@ViewData["TopicName"]</h2>
            @{var table_index = 1;}
            <div class="container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">QuizName</th>
                            <th scope="col">Description</th>
                            <th scope="col">Total qs</th>
                            <th scope="col">Duration</th>
                            <th scope="col">Difficult</th>
                            <th scope="col">Last attempt</th>
                            <th scope="col">Score</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var quiz in Model)
                            {
                                <tr>
                                    <td scope="row">@(table_index++)</td>
                                    <td>@(quiz.Name)</td>
                                    <td>@(quiz.Description)</td>
                                    <td>@(quiz.QuestionNum)</td>
                                    <td>@(quiz.Duration)</td>
                                    <td>@(quiz.QuizLevel.QuizLevelName)</td>
                                    @if (quiz.Attempts.Count > 0)
                                    {
                                        <td>@(String.Format("{0:MM/dd/yyyy}", quiz.Attempts.ElementAt(quiz.Attempts.Count - 1).StartTime))</td>
                                        <td>@(quiz.Attempts.ElementAt(quiz.Attempts.Count - 1).TotalMark)</td>
                                        <td>
                                            <a href="#" class="btn btn-primary">Attempt</a>
                                            <a asp-controller="Course" asp-action="AttemptDetail" asp-route-quizid="@quiz.QuizId" class="btn btn-primary">View results</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>-</td>
                                        <td>-</td>
                                        <td>
                                            <a href="#" class="btn btn-primary">Attempt</a>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>